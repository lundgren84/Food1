@model PokeBowlWebApplication.Models.AuthenticationModels.LoginModel

@using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @class = "login-form jsLoginForm" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.LabelFor(model => model.Username)
    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", autocomplete = "username" } })
    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger form-errormessage", type = "text", placeholder = "E-post" })


    @Html.LabelFor(model => model.Password, new { @class="margin-top" })
    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", autocomplete = "current-password", type="password" } })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger form-errormessage" })


    <div class="form-footer margin-top">
        <div class="form-submit">
            <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">Logga in</button>
        </div>
     
    </div>
}

<script src="~/Resourses/js/Authentication.js"></script>