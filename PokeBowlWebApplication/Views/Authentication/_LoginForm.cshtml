@model PokeBowlWebApplication.Models.AuthenticationModels.LoginModel

@using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @class = "login-form jsLoginForm" }))
{

    @Html.AntiForgeryToken()

    @Html.LabelFor(model => model.Username)
    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", autocomplete = "username" } })
    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", type = "text", placeholder = "E-post" })


    @Html.LabelFor(model => model.Password)
    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", autocomplete = "current-password" } })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

    <div class="form-footer">
        <div class="rememberme">
            <label class="checkbox">
                @Html.CheckBoxFor(model => model.RememberMe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.LabelFor(model => model.RememberMe)
                @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
            </label>
        </div>
        <div class="form-submit">
            <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">Logga in</button>
        </div>
    </div>
}

<script src="~/Resourses/js/Authentication.js"></script>